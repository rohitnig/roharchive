{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B", "build", 
                "-S", ".", 
                "-G", "Visual Studio 17 2022",
                "-DCMAKE_TOOLCHAIN_FILE=${env:VCPKG_ROOT}\\scripts\\buildsystems\\vcpkg.cmake"
            ],
            "group": "build",
            "problemMatcher": ["$msCompile"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "Configure CMake project with vcpkg"
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build", "--config", "Debug"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "CMake Configure",
            "problemMatcher": ["$msCompile"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "Build the project in Debug configuration"
        },
        {
            "label": "CMake Build Release",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build", "--config", "Release"],
            "group": "build",
            "dependsOn": "CMake Configure",
            "problemMatcher": ["$msCompile"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "Build the project in Release configuration"
        },
        {
            "label": "CMake Clean",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build", "--target", "clean"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "Clean build artifacts"
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "ctest",
            "args": ["--output-on-failure"],
            "group": "test",
            "dependsOn": "CMake Build",
            "options": {
                "cwd": "${workspaceFolder}\\build"
            },
            "detail": "Run all unit tests"
        },
        {
            "label": "Register DLL",
            "type": "shell",
            "command": "regsvr32",
            "args": ["\"${workspaceFolder}\\build\\bin\\Debug\\ArchiveExtractorShell.dll\""],
            "group": "build",
            "dependsOn": "CMake Build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "Register shell extension DLL (requires Admin)"
        },
        {
            "label": "Unregister DLL",
            "type": "shell",
            "command": "regsvr32",
            "args": ["/u", "\"${workspaceFolder}\\build\\bin\\Debug\\ArchiveExtractorShell.dll\""],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "Unregister shell extension DLL"
        }
    ]
}